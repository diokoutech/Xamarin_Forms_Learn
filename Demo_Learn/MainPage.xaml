<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo_Learn.MainPage">
    <StackLayout
        HorizontalOptions="CenterAndExpand"
        VerticalOptions="CenterAndExpand"
        Padding="30"
        >
        <!--use bonding for link value on forms-->
        <Label 
            Text="{Binding Source={x:Reference slider}, Path=Value, StringFormat='value is {0:F2}' }"
            FontSize="Large"
            TextColor="Orange"
            FontAttributes="Bold"
            x:Name="label"
            Opacity="{Binding Source={x:Reference slider}, Path=Value}"
            ></Label>
        <Slider
            MinimumTrackColor="Orange"
            ThumbColor="DimGray"
            HeightRequest="30"
            WidthRequest="300"
            x:Name="slider"
            BackgroundColor="LightGray"
            />
        <Button
            Text="Exercice"
            TextColor="White"
            BackgroundColor="Orange"
            Clicked="PageExercice"
            />
        <!--<Slider
            MinimumTrackColor="Orange"
            ThumbColor="DimGray"
            Minimum="0"
            Maximum="100"
            HeightRequest="30"
            WidthRequest="300"
            BackgroundColor="LightGray"
            ValueChanged="OnSliderValueChanged"
            />-->
    </StackLayout>
</ContentPage>
